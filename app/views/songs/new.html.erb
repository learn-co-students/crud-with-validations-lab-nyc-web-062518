<h1>Song Form</h1>
<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div>
      <ul>
        <% @song.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label :title %><br>
<%= f.text_field :title %>
<%= f.label :released %><br>
<%= f.check_box :released %>
<%= f.label :release_year %><br>
<%= f.number_field :release_year %>
<%= f.label :artist_name %><br>
<%= f.text_field :artist_name %>
<%= f.label :genre %><br>
<%= f.text_field :genre %>
<%= f.submit "Create Song" %>
<% end %>
